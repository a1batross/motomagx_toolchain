#!/bin/sh

prefix=/opt/toolchains/motomagx/arm-eabi2
exec_prefix=${prefix}
exec_prefix_set=no
libdir=${exec_prefix}/lib/SDL/lib/

#usage="\
#Usage: sdl-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs]"
usage="\
Usage: sdl-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs] [--static-libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | LC_ALL="C" sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 1.2.13
      ;;
    --cflags)
      echo -I${prefix}/include/SDL -I/opt/toolchains/motomagx/arm-eabi2/include/SDL -I/opt/toolchains/motomagx/arm-eabi2/include -D_GNU_SOURCE=1 -DQWS -Dmain=SDL_main -DQWS -D_PTHREADS 
      ;;
    --libs)
      echo -L${exec_prefix}/lib -L/opt/toolchains/motomagx/arm-eabi2/lib/SDL/lib -L/opt/toolchains/motomagx/arm-eabi2/lib/Sound -L/opt/toolchains/motomagx/arm-eabi2/lib/ezx-z6/lib -L/opt/toolchains/motomagx/arm-eabi2/lib/qt-2.3.8/lib -Wl,-rpath,${libdir} -Wl,-rpath,/opt/toolchains/motomagx/arm-eabi2/lib/Sound -lSDL -lSDLimage -lSDLmain -lpng -lmad -Wl,--rpath,/opt/toolchains/motomagx/arm-eabi2/lib/qt-2.3.8/lib -Wl,--rpath,/opt/toolchains/motomagx/arm-eabi2/lib/ezx-z6/lib -lpthread -lm -lqte-mt -lezxpm -ljpeg -lezxappbase -lezxtapi-xscale-r -llog_util -llighting -lezxsound
      ;;
    --static-libs)
#    --libs|--static-libs)
      echo -L${exec_prefix}/lib -L/opt/toolchains/motomagx/arm-eabi2/lib/SDL/lib -L/opt/toolchains/motomagx/arm-eabi2/lib/Sound -L/opt/toolchains/motomagx/arm-eabi2/lib/ezx-z6/lib -L/opt/toolchains/motomagx/arm-eabi2/lib/qt-2.3.8/lib -Wl,-rpath,${libdir} -Wl,-rpath,/opt/toolchains/motomagx/arm-eabi2/lib/Sound -lSDL -lSDLimage -lSDLmain -lpng -lmad -Wl,--rpath,/opt/toolchains/motomagx/arm-eabi2/lib/qt-2.3.8/lib -Wl,--rpath,/opt/toolchains/motomagx/arm-eabi2/lib/ezx-z6/lib -lpthread -lm -lqte-mt -lezxpm -ljpeg -lezxappbase -lezxtapi-xscale-r -llog_util -llighting -lezxsound
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

